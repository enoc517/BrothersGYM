@model BrothersGYM.Models.Empleado

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                Puesto
                <select asp-for="Idpuesto" class ="form-control" asp-items="ViewBag.Idpuesto"></select>
            </div>
            <div class="form-group">
                Cuenta de Bancaria
                <input asp-for="CuentaBancaria" class="form-control" />
                <span asp-validation-for="CuentaBancaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                Numero de Seguro Social
                <input asp-for="NumeroSeguroSocial" class="form-control" />
                <span asp-validation-for="NumeroSeguroSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                Retencion de la Ccss
                <input asp-for="RetencionCcss" class="form-control" />
                <span asp-validation-for="RetencionCcss" class="text-danger"></span>
            </div>
            <div class="form-group">
                Fecha de Contratacion
                <input asp-for="FechaContratacion" class="form-control" />
                <span asp-validation-for="FechaContratacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success"><i class="bi bi-plus-circle"> Crear</i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-warning"> <i class="bi bi-arrow-return-left"></i> Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
